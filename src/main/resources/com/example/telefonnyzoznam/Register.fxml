<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="900.0" prefWidth="1200.0" spacing="20.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.telefonnyzoznam.RegisterController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Label fx:id="nadpis" text="Registácia">
         <font>
            <Font name="Arial Bold" size="58.0" />
         </font>
      </Label>
      <TextField fx:id="textFieldMeno" alignment="CENTER" maxWidth="700.0" prefWidth="600.0" promptText="Používatelske meno : ">
         <VBox.margin>
            <Insets bottom="10.0" left="40.0" right="40.0" top="40.0" />
         </VBox.margin>
      </TextField>
      <Label fx:id="labelSpravaNadEmailom" />
      <TextField fx:id="textFieldEmail" alignment="CENTER" maxWidth="700.0" prefWidth="600.0" promptText="Email">
         <VBox.margin>
            <Insets bottom="40.0" left="40.0" right="40.0" />
         </VBox.margin>
      </TextField>
      <TextField fx:id="textFieldHeslo" alignment="CENTER" maxWidth="700.0" prefWidth="600.0" promptText="Heslo" />
      <Button fx:id="buttonPrihlasenie" mnemonicParsing="false" onAction="#Registracia" prefWidth="500.0" text="Registrácia">
         <VBox.margin>
            <Insets top="40.0" />
         </VBox.margin>
      </Button>
      <Button fx:id="buttonRegistracia" mnemonicParsing="false" onAction="#prihlasenie" prefWidth="500.0" text="Speť na prihlásenie">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
